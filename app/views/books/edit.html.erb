<h2>Editing Book</h2>
<%= form_with model: @book do |f| %>
  <%= f.label :title, 'Title' %><br>
  <%= f.text_field :title %><br>

  <%= f.label :body, 'Body' %><br>
  <%= f.text_field :body %><br>

  <%= f.submit 'Update Book' %>
<% end %>
<%= link_to 'Show', book_path(@book.id) %>|<%= link_to 'Back', books_path %>